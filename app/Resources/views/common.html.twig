{% extends '::base.html.twig' %}

{% block global_css_js %}
    <link href="{{ asset('css/FontAwesome/css/font-awesome.min.css') }}" rel="stylesheet">
{% endblock %}

{% block header %}

<header class='header col-xs-7'>

	<div class='color-wrap col-xs-12'>
		<div class='firm-title col-xs-8'>
			<h1 class='firm-name'><a href='{{ path('icoo_naslovna_route') }}'><span class='white-icoo'>ICOO</span><span class='black-icoo'>ICOO</span></a></h1>
    	</div>
        <div class='col-xs-2' id="loading-id">
            <span class="fa fa-spinner fa-spin fa-4x"></span>
        </div>
    </div>

    <div class='space-align col-xs-12'>
        <div class='firm-occupation col-xs-4'>
    	    <h1>professional web development</h1>
        </div>

        {% set requestParams = app.request.attributes.get('_route_params') %}
        {% set requestRoute = app.request.attributes.get('_route') %}
        <div class='languages col-xs-4'>
        	<a href="{{ path(requestRoute, requestParams|merge({'_locale' : 'hr'})) }}" class='col-xs-3'><span class='real-link'>croatian</span><span></span></a>
        	<a href="{{ path(requestRoute, requestParams|merge({'_locale' : 'en'})) }}" class='col-xs-3'><span class='real-link'>english</span><span>|</span></a>
        	<a href="{{ path(requestRoute, requestParams|merge({'_locale' : 'de'})) }}" class='col-xs-3'><span class='real-link'>deutch</span><span>|</span></a>
        </div>
    </div>
</header>

{% endblock %}

{% block navigacija %}

<div class='navigacija col-xs-12'>
	<nav class='col-xs-8'>
		<ul>
			<li class="col-xs-12">
                <span class="fa fa-home fa-2x nav-icon col-xs-2"></span>
                <a href='{{ path('icoo_naslovna_route') }}' class="col-xs-10">{{ translation.nav1 }}</a>
            </li>

			<li class="col-xs-12">
                <span class="fa fa-cogs fa-2x nav-icon col-xs-2"></span>
                <a href='{{ path('icoo_djelatnost_route_' ~ app.request.getLocale()) }}' class="col-xs-10">{{ translation.nav2 }}</a>
            </li>

			<li class="col-xs-12">
                <span class="fa fa-keyboard-o fa-2x nav-icon col-xs-2"></span>
                <a href='{{ path('icoo_projekti_route_' ~ app.request.getLocale()) }}'>{{ translation.nav3 }}</a>
            </li>

			<li class="col-xs-12">
                <span class="fa fa-photo fa-2x nav-icon col-xs-2"></span>
                <a href='{{ path('icoo_fotografija_route_' ~ app.request.getLocale()) }}'>{{ translation.nav4 }}</a>
            </li>

			<li class="col-xs-12">
                <span class="fa fa-qrcode fa-2x nav-icon col-xs-2"></span>
                <a href='{{ path('icoo_potrebe_projekta_route_' ~ app.request.getLocale()) }}'>{{ translation.nav5 }}</a>
            </li>

			<li class="col-xs-12">
                <span class="fa fa-comments-o fa-2x nav-icon col-xs-2"></span>
                <a href='{{ path('icoo_pitanja_route_' ~ app.request.getLocale()) }}'>{{ translation.nav6 }}</a>
            </li>
		</ul>
	</nav>
</div>
	
{% endblock %}