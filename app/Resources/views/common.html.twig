{% extends '::base.html.twig' %}

{% block header %}

<header class='header col-xs-7'>

	<div class='color-wrap col-xs-12'>
		<div class='firm-title col-xs-8'>
			<h1 class='firm-name'><a href='{{ path('icoo_naslovna_route') }}'><span class='white-icoo'>ICOO</span><span class='black-icoo'>ICOO</span></a></h1>
    	</div>
    </div>

    <div class='space-align col-xs-12'>
        <div class='firm-occupation col-xs-4'>
    	    <h1>professional web development</h1>
        </div>

        {% set requestParams = app.request.attributes.get('_route_params') %}
        {% set requestRoute = app.request.attributes.get('_route') %}
        <div class='languages col-xs-4'>
        	<a href="{{ path(requestRoute, requestParams|merge({'_locale' : 'hr'})) }}" class='col-xs-3'><span class='real-link'>croatian</span><span></span></a>
        	<a href="{{ path(requestRoute, requestParams|merge({'_locale' : 'en'})) }}" class='col-xs-3'><span class='real-link'>english</span><span>|</span></a>
        	<a href="{{ path(requestRoute, requestParams|merge({'_locale' : 'de'})) }}" class='col-xs-3'><span class='real-link'>deutch</span><span>|</span></a>
        </div>
    </div>
</header>

{% endblock %}

{% block navigacija %}

<div class='navigacija col-xs-12'>
	<nav class='col-xs-5'>
		<ul>
			 {% set route = app.request.attributes.get('_route') %}

			<li><a href='{{ path('icoo_naslovna_route') }}' class='{% if route == 'icoo_naslovna_route'  %}{{ 'highlighted' }}{% endif %}'>{{ translation.nav1 }}</a></li>
			<li><a href='{{ path('icoo_djelatnost_route') }}'  class='{% if route == 'icoo_djelatnost_route'  %}{{ 'highlighted' }}{% endif %}'>{{ translation.nav2 }}</a></li>
			<li><a href='{{ path('icoo_projekti_route') }}'  class='{% if route == 'icoo_projekti_route'  %}{{ 'highlighted' }}{% endif %}'>{{ translation.nav3 }}</a></li>
			<li><a href='{{ path('icoo_fotografija_route') }}'  class='{% if route == 'icoo_fotografija_route'  %}{{ 'highlighted' }}{% endif %}'>{{ translation.nav4 }}</a></li>
			<li><a href='{{ path('icoo_potrebe_projekta_route') }}'  class='{% if route == 'icoo_potrebe_projekta_route'  %}{{ 'highlighted' }}{% endif %}'>{{ translation.nav5 }}</a></li>
			<li><a href='{{ path('icoo_pitanja_route') }}'  class='{% if route == 'icoo_pitanja_route'  %}{{ 'highlighted' }}{% endif %}'>{{ translation.nav6 }}</a></li>
		</ul>
	</nav>
</div>
	
{% endblock %}